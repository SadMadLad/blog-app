<%= render "shared/flash", type: :new, alert_type: "success" %>
<%= render "shared/flash", type: :edit, alert_type: "success" %>
<%= render "shared/flash", type: :delete, alert_type: "success" %>

<div class="container">
  <h1>Articles</h1>
  <% @articles.each do |article| %>
    <%= link_to render("article", article: article), article_path(article), class: "text-decoration-none text-reset" %>
  <% end %> 
  <%= link_to "Create New Article", new_article_path, class: "btn btn-info" if user_signed_in? %>
</div>
