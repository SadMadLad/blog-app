<% if flash[:errs] %>
    <div class="alert alert-danger close alert-dismissable">
    <% flash[:errs].each do |error_message| %>
        <li><%= error_message %></li>
    <% end %>
    </div>
    <% flash.delete(:errs)%>
<% end %>

<div class="container" data-turbo="false">
    <h2>New Article</h2>
    <%= form_with model: @article do | form | %>
        <div class="form-group">
            <%= form.label :title, class: "label"%>
            <%= form.text_field :title, autofocus: true, class: "form-control my-3", required: true %>
        </div>
        <div class="form-group">
            <%= form.label :body, class: "label"%>
            <%= form.text_area :body, autofocus: true, class: "form-control my-3", rows: 5, required: true, minlength: "10" %>
        </div>
        <div class="form-group">
            <%= form.label :image, class: "label"%>
            <%= form.file_field :image, class: "form-control-file my-3" %>
        </div>
        <%= form.submit %>
    <% end %>
</div>
