      <div class="media-content">
        <p class="title is-4"><%= article.user.first_name + " " + article.user.last_name %></p>
      </div>
    </div>

    <div class="content">

      <h3><%= article.body %></h3>
      <br>
      <time datetime="2016-1-1"><%= article.updated_at.strftime("%d %B, %Y") %></time>
    </div>
  </div>
</div>